#!/bin/sh
. scripts/functions.sh

PKG='musl-1.2.1'
if not_built; then
    inside "https://musl.libc.org/releases/$PKG.tar.gz"
    mkdir -p "$BUILD/$PKG"
    
    step 1 || ./configure CC="$TARGET-gcc" CROSS_COMPILE="$TARGET-" \
              --prefix=/ --disable-static --target="$TARGET"
    step 2 || make -j "$(nproc)"
    step 3 || DESTDIR="$BUILD/$PKG" make install-libs
    
    build "$PKG"
fi
